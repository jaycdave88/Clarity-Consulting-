@model ClarityConference.Models.RegisterClientViewModel

@{
    ViewBag.Title = "RegisterClient";
}

<h2>Register Client</h2>

@using (Html.BeginForm("RegisterClient", "Registration", FormMethod.Post))
{
    <div class="form-horizontal">


        <div class="form-group">
            <div class="col-sm-2 control-label">
                @Html.LabelFor(vm => vm.Name)
            </div>

            <div class="col-sm-6">
                @Html.TextBoxFor(vm => vm.Name)
                @Html.ValidationMessageFor(vm => vm.Name)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2 control-label">
                @Html.LabelFor(vm => vm.Phone)
            </div>
            <div class="col-sm-6">
                @Html.TextBoxFor(vm => vm.Phone)
                @Html.ValidationMessageFor(vm => vm.Phone)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2 control-label">
                @Html.LabelFor(vm => vm.Email)
            </div>
            <div class="col-sm-6">
                @Html.TextBoxFor(vm => vm.Email)
                @Html.ValidationMessageFor(vm => vm.Email)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2 control-label">
                @Html.LabelFor(vm => vm.Street)
            </div>
            <div class="col-sm-6">
                @Html.TextBoxFor(vm => vm.Street)
                @Html.ValidationMessageFor(vm => vm.Street)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2 control-label">
                @Html.LabelFor(vm => vm.City)
            </div>
            <div class="col-sm-6">
                @Html.TextBoxFor(vm => vm.City)
                @Html.ValidationMessageFor(vm => vm.City)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2 control-label">
                @Html.LabelFor(vm => vm.State)
            </div>
            <div class="col-sm-6">
                @Html.TextBoxFor(vm => vm.State)
                @Html.ValidationMessageFor(vm => vm.State)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2 control-label">
                @Html.LabelFor(vm => vm.ZipCode)
            </div>
            <div class="col-sm-6">
                @Html.TextBoxFor(vm => vm.ZipCode)
                @Html.ValidationMessageFor(vm => vm.ZipCode)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2">
                <button type="submit" data-form-action="@Url.Action("","")" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
}

