@model ClarityConference.Models.RegisterAttendeeViewModel

@{
    ViewBag.Title = "RegisterAttendee";
}

<h2>Register Attendee</h2>

@using (Html.BeginForm("RegisterAttendee", "Registration", FormMethod.Post))
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-2 control-label">
                @Html.LabelFor(vm => vm.SelectedClient)
            </div>

            <div class="col-sm-6">
                @Html.DropDownListFor(vm => vm.SelectedClient, Model.Clients)
                @Html.ValidationMessageFor(vm => vm.SelectedClient)

            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2 control-label">
                @Html.LabelFor(vm => vm.Name)
            </div>

            <div class="col-sm-6">
                @Html.TextBoxFor(vm => vm.Name)
                @Html.ValidationMessageFor(vm => vm.Name)

            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2 control-label">
                @Html.LabelFor(vm => vm.Email)

            </div>

            <div class="col-sm-6">
                @Html.TextBoxFor(vm => vm.Email)
                @Html.ValidationMessageFor(vm => vm.Email)

            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                <button type="submit" data-form-action="@Url.Action("","")" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
}
